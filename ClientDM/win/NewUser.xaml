<Window x:Class="ClientDM.win.NewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientDM.win"
        mc:Ignorable="d"
        Title="NewUser" Height="193" Width="426">
    <StackPanel Background="Gray">
        <Label Content="Имя/Логин" HorizontalAlignment="Center" FontFamily="Montserrat" FontWeight="Regular" FontSize="15"></Label>
        <TextBox HorizontalAlignment="Center" Name="name" FontFamily="Montserrat" FontWeight="Regular" FontSize="15" MinWidth="150"></TextBox>
        <Label Content="Отдел" HorizontalAlignment="Center" FontFamily="Montserrat" FontWeight="Regular" FontSize="15" ></Label>
        <TextBox HorizontalAlignment="Center" Name="unit" FontFamily="Montserrat" FontWeight="Regular" FontSize="15" MinWidth="150"></TextBox>
        <Button HorizontalAlignment="Center" FontFamily="Montserrat" FontWeight="Regular" FontSize="15" Style="{StaticResource b}" Height="29" Width="115" Click="Button_Click">Добавить</Button>
        
    </StackPanel>
</Window>
