        <ListView x:Name="listOfLeters" Grid.Row="2" Grid.Column="1" MouseDoubleClick="listOfLeters_MouseDoubleClick">
            
        </ListView>
        <Menu Grid.ColumnSpan="3">
            <MenuItem Header="Действие" BorderThickness="3">
                <MenuItem Header="Отменить"  />
                <Separator></Separator>
                <MenuItem Header="Создать" />
                <MenuItem Header="Редактировать" />
                <MenuItem Header="Сохранить" />
                <MenuItem Header="Найти"/>
                <Separator></Separator>
                <MenuItem Header="Удалить" />
            </MenuItem>
            <MenuItem Header="Отчет"></MenuItem>
